<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.kumar.krish.restaurantapp">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Screen1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Screen2"
            android:theme="@style/AppTheme" />
        <activity android:name=".DineScreen2"
            android:label="Dine In"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ComplexScreen"
            android:theme="@style/AppTheme"/>
        <activity android:name=".RestaurantChooser"
            android:theme="@style/AppTheme"/>
        <activity android:name=".OfferScreen"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ZipCode"
            android:theme="@style/AppTheme"/>
        <activity android:name=".Cart"
            android:label="CheckOut"
            android:theme="@style/AppTheme" />
        <activity android:name=".SpecialOffers"
            android:theme="@style/AppTheme" />
    </application>


</manifest>