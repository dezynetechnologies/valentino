<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlusOneFragment">

    <!--com.google.android.gms.plus.PlusOneButton xmlns:plus="http://schemas.android.com/apk/lib/com.google.android.gms.plus"
        android:id="@+id/plus_one_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        plus:annotation="inline"
        plus:size="standard" /-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/screen1"
        android:src="@drawable/screen1"
        android:scaleType="fitXY"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal|top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:text="@string/dine_in"
            android:id="@+id/sofferButton"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/roundshapebtn"
            android:layout_marginTop="200sp"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal|top"
            android:textSize="20dp" />

        <Button
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:text="@string/pick_up"
            android:id="@+id/sorderButton"
            android:background="@drawable/roundshapebtn"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_below="@+id/sofferButton"
            android:layout_marginTop="44sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20dp" />

        <Button
            android:layout_width="300sp"
            android:layout_height="50dp"
            android:text="@string/status"
            android:id="@+id/statusButton"
            android:background="@drawable/roundshapebtn"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="44dp"
            android:layout_below="@+id/sorderButton"
            android:layout_alignStart="@+id/sorderButton" />
    </RelativeLayout>

</FrameLayout>
