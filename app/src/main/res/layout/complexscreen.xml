<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:id="@+id/horizontalScrollView4"
        android:textColor="#ffffff"
        android:background="#ff4646"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <Button
                android:layout_width="200sp"
                android:layout_height="50sp"
                android:text="Pasta"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:background="#ff4646"
                android:layout_weight="1"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="200sp"
                android:layout_height="50sp"
                android:text="Pizza"
                android:layout_gravity="center"
                android:background="#ff4646"
                android:layout_weight="1"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="200sp"
                android:layout_height="50sp"
                android:text="AntiPasta"
                android:layout_gravity="center"
                android:background="#ff4646"
                android:layout_weight="1"
                android:textColor="#ffffff" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Built Order"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:background="#ff4646"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:text="Vegans"
        android:id="@+id/button7"
        android:background="@drawable/roundshapebtn2"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:text="Vegitarians"
        android:id="@+id/button8"
        android:layout_marginTop="10sp"
        android:background="@drawable/roundshapebtn2"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:text="Glucose-Intolerant"
        android:id="@+id/button9"
        android:layout_marginTop="10sp"
        android:background="@drawable/roundshapebtn2"
        android:layout_below="@+id/button8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:text="Lactose-Intolerant"
        android:id="@+id/button10"
        android:background="@drawable/roundshapebtn2"
        android:layout_alignTop="@+id/button7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:text="Expecting Baby"
        android:id="@+id/button11"
        android:layout_marginTop="10sp"
        android:background="@drawable/roundshapebtn2"
        android:layout_below="@+id/button10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:text="Regular"
        android:id="@+id/button12"
        android:layout_marginTop="10sp"
        android:background="@drawable/roundshapebtn2"
        android:layout_below="@+id/button11"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>