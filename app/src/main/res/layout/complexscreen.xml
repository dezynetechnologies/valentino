<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_screen2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="in.kumar.krish.restaurantapp.Screen2"
        android:visibility="visible">

        <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_screen2"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>



    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:orientation="vertical"
        android:baselineAligned="false"
        android:weightSum="1"
        android:gravity="fill_horizontal|fill_vertical"
        android:paddingTop="@dimen/notification_large_icon_width">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:paddingLeft="@dimen/abc_action_bar_overflow_padding_end_material"
            android:paddingRight="@dimen/abc_action_bar_overflow_padding_end_material">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="Vegans"
                android:id="@+id/button7"
                android:background="@drawable/roundshapebtn2"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:clickable="true"
                android:enabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="Vegitarians"
                android:id="@+id/button8"
                android:layout_marginTop="10sp"
                android:background="@drawable/roundshapebtn2"
                android:layout_below="@+id/button7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:clickable="true"
                android:enabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="Glucose-Intolerant"
                android:id="@+id/button9"
                android:layout_marginTop="10sp"
                android:background="@drawable/roundshapebtn2"
                android:layout_below="@+id/button8"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:clickable="true"
                android:enabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="Lactose-Intolerant"
                android:id="@+id/button10"
                android:background="@drawable/roundshapebtn2"
                android:layout_alignTop="@+id/button7"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:clickable="true"
                android:enabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="Expecting Baby"
                android:id="@+id/button11"
                android:layout_marginTop="10sp"
                android:background="@drawable/roundshapebtn2"
                android:layout_below="@+id/button10"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:clickable="true"
                android:enabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="Regular"
                android:id="@+id/button12"
                android:layout_marginTop="10sp"
                android:background="@drawable/roundshapebtn2"
                android:layout_below="@+id/button11"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:clickable="true"
                android:enabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:foregroundGravity="center_horizontal" />
        </RelativeLayout>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:id="@+id/horizontalScrollView4"
        android:textColor="#ffffff"
        android:background="#ff4646"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <Button
                android:layout_width="200sp"
                android:layout_height="50sp"
                android:text="Pasta"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:background="#ff4646"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:id="@+id/pasta" />

            <Button
                android:layout_width="200sp"
                android:layout_height="50sp"
                android:text="Pizza"
                android:layout_gravity="center"
                android:background="#ff4646"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:id="@+id/pizza" />

            <Button
                android:layout_width="200sp"
                android:layout_height="50sp"
                android:text="@string/antipasta"
                android:layout_gravity="center"
                android:background="#ff4646"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:id="@+id/antipasta" />
        </LinearLayout>
    </HorizontalScrollView>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="50sp"
        android:id="@+id/horizontalScrollView5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical|fill_vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView1"
            android:src="@drawable/menu_screen_1"
            android:scaleType="fitXY"
            android:layout_above="@+id/horizontalScrollView4"
            android:layout_centerHorizontal="true"
            android:paddingBottom="0dp" />

            <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView3"
            android:src="@drawable/menu_screen_2"
            android:scaleType="fitXY"
            android:layout_above="@+id/horizontalScrollView4"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView4"
            android:src="@drawable/menu_screen_3"
            android:scaleType="fitXY"
            android:layout_above="@+id/horizontalScrollView4"
            android:layout_centerHorizontal="true" />
        </LinearLayout>
    </HorizontalScrollView>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@drawable/cart"
            app:layout_anchorGravity="bottom|right|end"
            android:layout_marginRight="16dp"
            android:id="@+id/addcart"
            android:visibility="visible"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="false"
            android:clickable="true"
            android:cropToPadding="false"
            android:focusable="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false" />
    </RelativeLayout>





    </LinearLayout>

    </android.support.v4.widget.DrawerLayout>